<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="@color/dustyYellow"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAlbumPicture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintDimensionRatio="1"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/ivAlbumPicture"
            card_view:layout_constraintEnd_toEndOf="@+id/ivAlbumPicture"
            card_view:layout_constraintStart_toStartOf="@+id/ivAlbumPicture"
            card_view:layout_constraintTop_toTopOf="@+id/ivAlbumPicture"
            card_view:layout_constraintVertical_bias="0.76" />

        <TextView
            android:id="@+id/tvHostName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="HostName"
            android:textColor="#FFFFFF"
            card_view:layout_constraintEnd_toEndOf="@+id/ivAlbumPicture"
            card_view:layout_constraintStart_toStartOf="@+id/ivAlbumPicture"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTitle" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>